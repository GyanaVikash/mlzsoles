<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".activities.TakeExamSectionWiseTimeActivity">

    <include layout="@layout/take_exam_submit"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sections_tabs_time"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"/>


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/questions_tabs_time"
        app:tabMode="scrollable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.viewpager.widget.ViewPager
            android:layout_above="@+id/ll_buttons"
            android:id="@+id/viewpager_section_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tabs" />

        <include layout="@layout/take_exam_bottom"/>


    </RelativeLayout>


</LinearLayout>