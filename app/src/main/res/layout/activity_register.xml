<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/ten_dp">

            <ImageView
                android:layout_width="@dimen/hundred_dp"
                android:layout_height="@dimen/hundred_dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/five_dp"
                android:src="@drawable/mlzs_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/five_dp"
                android:text="@string/create_ur_account"
                android:textAllCaps="true"
                android:textColor="@color/logoGreen"
                android:textSize="@dimen/twenty_sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/twenty_five_dp"
                android:layout_marginRight="@dimen/twenty_five_dp"
                android:layout_marginTop="@dimen/fifteen_dp"
                app:cardCornerRadius="@dimen/ten_dp"
                app:cardElevation="@dimen/fifteen_dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/ed_register_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:digits="qwertyuiopasdfghjklzxcvbnm 1234567890 QWERTYUIOPASDFGHJKLZXCVBNM ,.:;'@  "
                        android:hint="@string/name"
                        android:inputType="textPersonName"
                        android:padding="@dimen/fifteen_dp"
                        android:textSize="@dimen/fifteen_sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/two_dp"
                        android:background="@color/colorPrimary" />

                    <EditText
                        android:id="@+id/ed_register_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:digits="qwertyuiopasdfghjklzxcvbnm 1234567890 QWERTYUIOPASDFGHJKLZXCVBNM ,.:;'@  "
                        android:hint="@string/user_name"
                        android:padding="@dimen/fifteen_dp"
                        android:textSize="@dimen/fifteen_sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/two_dp"
                        android:background="@color/colorPrimary" />

                    <EditText
                        android:id="@+id/ed_register_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:digits="qwertyuiopasdfghjklzxcvbnm 1234567890 QWERTYUIOPASDFGHJKLZXCVBNM ,.:;'@  "
                        android:hint="@string/email"
                        android:inputType="textEmailAddress"
                        android:padding="@dimen/fifteen_dp"
                        android:textSize="@dimen/fifteen_sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/two_dp"
                        android:background="@color/colorPrimary" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <EditText
                            android:id="@+id/ed_register_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:digits="qwertyuiopasdfghjklzxcvbnm 1234567890 QWERTYUIOPASDFGHJKLZXCVBNM ,.:;'@#  "
                            android:hint="@string/password"
                            android:inputType="textPassword"
                            android:padding="@dimen/fifteen_dp"
                            android:textSize="@dimen/fifteen_sp" />

                        <ImageView
                            android:id="@+id/img_register_show_pwd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="@dimen/ten_dp"
                            android:layout_marginTop="@dimen/eight_dp"
                            android:src="@drawable/eye_on"
                            android:tint="@color/colorPrimary" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/two_dp"
                        android:background="@color/colorPrimary" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/ed_register_pwd_confirm"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:digits="qwertyuiopasdfghjklzxcvbnm 1234567890 QWERTYUIOPASDFGHJKLZXCVBNM ,.:;'@#  "
                            android:hint="@string/password_confirm"
                            android:inputType="textPassword"
                            android:padding="@dimen/fifteen_dp"
                            android:textSize="@dimen/fifteen_sp" />

                        <ImageView
                            android:id="@+id/img_register_show_cpwd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="@dimen/ten_dp"
                            android:layout_marginTop="@dimen/eight_dp"
                            android:src="@drawable/eye_on"
                            android:tint="@color/colorPrimary" />

                    </RelativeLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/tv_register_now"
                android:layout_width="@dimen/two_twenty_dp"
                android:layout_height="@dimen/thirty_dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/twenty_dp"
                android:background="@color/logoRed"
                android:gravity="center"
                android:paddingBottom="@dimen/five_dp"
                android:paddingTop="@dimen/five_dp"
                android:text="@string/register_now"
                android:textAllCaps="true"
                android:textColor="@color/white_color"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/ll_have_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/ten_dp"
                android:paddingTop="@dimen/ten_dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/already_have_acc"
                    android:textColor="@color/logoGreen" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/five_dp"
                    android:text="@string/login_underline"
                    android:textColor="@color/logoRed"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/help_me"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/ten_dp"
                android:paddingTop="@dimen/ten_dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Facing problem to register"
                    android:textColor="@color/logoGreen" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/five_dp"
                    android:text="Help"
                    android:textColor="@color/logoRed"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>