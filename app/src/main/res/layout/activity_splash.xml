<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/windowBackground"
    tools:context=".activities.SplashActivity">


    <ImageView
        android:id="@+id/img_splash"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="102dp"
        android:src="@drawable/mlzs_logo" />


    <TextView
        android:id="@+id/tv_splash_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_splash"
        android:layout_centerInParent="true"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/open_sans_extrabold"
        android:text="@string/app_title"
        android:textColor="@color/logoGreen"
        android:textSize="@dimen/fifteen_sp" />

    <com.mlzs.mlzsoles.utils.HorizontalDottedProgress
        android:layout_width="@dimen/one_fifty_dp"
        android:layout_height="@dimen/fifteen_dp"
        android:layout_below="@+id/tv_splash_title"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/fifteen_dp" />


</RelativeLayout>